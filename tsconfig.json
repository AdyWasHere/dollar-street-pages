{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "listFiles": false,
    "noLib": false,
    "outDir": "dist",
    "stripInternal": true,
    "lib": ["dom", "es6"]
  },
  "exclude": [
    "node_modules",
    "bundles",
    "dist",
    "src/aot",
    "./test",
    "./test-e2e"
  ]
}
